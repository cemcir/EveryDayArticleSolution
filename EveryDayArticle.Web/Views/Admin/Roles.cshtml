@model List<EveryDayArticle.Web.Identity.AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roller</h1>
<hr/>
@if (ViewBag.error != null) {
    <div class="alert alert-danger">@ViewBag.error</div>
}
<table class="table table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol ismi</th>
        <th>Silme</th>
        <th>Güncelleme</th>
    </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <form action="/role/delete" method="post">
                    <input type="hidden" name="Id" value="@(item.Id)"/>
                    <button type="submit" class="btn btn-success">Sil</button>
                </form>
            </td>
            <td>
                <a class="btn btn-info" asp-action="RoleUpdate" asp-route-id="@(item.Id)">
                    Güncelle
                </a>
            </td>
        </tr>
    }

</table>


<a href="/role/create" class="btn btn-info">Rol Oluştur</a>

