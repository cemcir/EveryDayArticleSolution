@model List<EveryDayArticle.Web.Models.RoleAssignModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Kullanıcıya rol atama</h3>
<hr/>

<form asp-controller="Admin" asp-action="RoleAssign" method="post">
    @for (int i = 0; i < Model.Count; i++) {
        <div class="form-check">
            <input asp-for="@(Model[i].Exist)" type="checkbox" class="form-check-input" />
            <label class="form-check-label">@Model[i].RoleName</label>

            <input type="hidden" asp-for="@(Model[i].RoleId)"  />
            <input type="hidden" asp-for="@(Model[i].RoleName)"/>
        </div>
    }
    <input class="btn btn-success" type="submit" value="Rol Ata"/>
</form>

